<Window x:Class="Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:Visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="PreviousButton" Content="Previous" Margin="10" Height="25" Width="60" HorizontalAlignment="Left"/>
        <Button Grid.Row="0" x:Name="NextButton" Content="Next" Margin="10" Height="25" Width="60" HorizontalAlignment="Right"/>
        <oxy:PlotView Grid.Row="1" Model="{Binding riverPlot}"/>
        <Button Grid.Row="2" x:Name="GenerateButton" Content="Generate" Margin="10" Height="25" Width="60" HorizontalAlignment="Left"/>
        <Button Grid.Row="2" x:Name="UpdateButton" Content="Update" Margin="10" Height="25" Width="60" HorizontalAlignment="Right"/>
    </Grid>
</Window>
